---
import Arrow from "../../components/logos/Arrow.astro";
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
const blogs = await getCollection("blogs");
---

<Layout title="Blogs">
  <main class="h-screen max-w-7xl text-slate-200">
    {
      blogs.map((blog) => {
        return (
          <a href={`/blogs/${blog.slug}`}>
            <div>
              <p>{blog.data.date}</p>
              <h3 class="flex items-center text-lg text-slate-100">
                {blog.data.title}
                <span class="ml-2">
                  <Arrow />
                </span>
              </h3>
              <p class="line-clamp-1">{blog.body}</p>
            </div>
          </a>
        );
      })
    }
  </main>
</Layout>
