---
import Layout from '~/layouts/Layout.astro'

import Wrapper from '~/components/Wrapper.astro'
import Projects from '~/components/Projects.astro'
import Blogs from '~/components/Blogs.astro'
import Footer from '~/components/Footer.astro'
import Skills from '~/components/Skills.astro'

import BackgroundGrid from '~/components/ui/BackgroundGrid.astro'

import Hero from '~/components/Hero.astro'
---

<script>
  import { loglib } from '@loglib/tracker'
  loglib.record({
    id: 'saifur_pages',
  })
</script>

<Layout
  title='Saifur Rahman'
  description='Personal website and blog of Saifur Rahman, a full-stack web developer.'
  image='https://github.com/devSaifur/saifur.dev/raw/main/src/images/thumbnail.png'
>
  <BackgroundGrid />

  <Wrapper>
    <div class='grid gap-y-12 lg:gap-y-20'>
      <Hero />

      <!-- TECHNOLOGIES -->
      <Skills />

      <!-- PROJECTS -->
      <Projects />

      <!-- BLOGS -->
      <Blogs />

      <Footer />
    </div>
  </Wrapper>
</Layout>
