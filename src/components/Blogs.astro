---
import { getCollection } from 'astro:content'
import { Icon } from 'astro-icon/components'

const blogs = await getCollection('blog')
---

<section id='Blogs' class='space-y-10 text-white'>
  <h2 class='text-accent-purple pb-4 text-lg font-bold uppercase'>Blogs</h2>
  {
    blogs.map((blog) => (
      <a href={`/blog/${blog.slug}`}>
        <div class='group/blog hvoer:bg-stone-900/50 flex flex-col gap-2 rounded-md border border-emerald-600 py-4 lg:px-4 lg:hover:cursor-pointer'>
          <p class='text-sm'>{blog.data.date}</p>
          <h3 class='group-hover/blog:text-accent flex items-center text-xl'>
            {blog.data.title}
            <span
              aria-hidden='true'
              class='ml-2 translate-y-px transition-transform group-hover/blog:-translate-y-1 group-hover/blog:translate-x-1 group-focus-visible/blog:-translate-y-1 group-focus-visible/project:translate-x-1 motion-reduce:transition-none'
            >
              <Icon name='arrow' />
            </span>
          </h3>
          <p class='line-clamp-2 text-sm'>{blog.body}</p>
        </div>
      </a>
    ))
  }
</section>
