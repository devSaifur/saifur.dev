---
import { Icon } from 'astro-icon/components'
---

<div class='grid gap-8 lg:order-3'>
  <ul
    class='flex items-center justify-center gap-x-5 lg:justify-start lg:gap-8'
    aria-label='social links section'
  >
    <a target='_blank' href='https://github.com/devSaifur'>
      <label for='github-social-link' class='sr-only'>Github social link</label>
      <Icon
        name='github'
        class='size-6 cursor-pointer text-accent hover:text-accent/80 sm:size-8'
      />
    </a>
    <a target='_blank' href='https://www.linkedin.com/in/dev-saifur'>
      <label for='linkedin-social-link' class='sr-only'
        >Linkedin social link</label
      >
      <Icon
        name='linkedin'
        class='size-8 cursor-pointer text-accent hover:text-accent/80 sm:size-10'
      />
    </a>
    <a target='_blank' href='https://x.com/devSaifur'>
      <label for='x-social-link' class='sr-only'
        >X, formally Twitter social link</label
      >
      <Icon
        name='x'
        class='size-6 cursor-pointer text-accent hover:text-accent/80 sm:size-8'
      />
    </a>
    <button
      id='download-cv'
      class='text-primary inline-flex items-center justify-center whitespace-nowrap rounded-full bg-accent/70 px-4 py-2 text-xs font-bold text-[rgba(30,30,46,255)] shadow hover:bg-accent/60 focus-visible:outline-none focus-visible:ring-1 sm:text-sm'
    >
      <Icon name='download' class='mr-1 size-4' />CV</button
    >
  </ul>
</div>

<script is:inline>
  document.getElementById('download-cv').addEventListener('click', () => {
    const url =
      'https://cdn.jsdelivr.net/gh/devSaifur/saifur.dev/public/assets/Saifur%20Rahman%20(CV).pdf'

    fetch(url)
      .then((response) => response.blob())
      .then((blob) => {
        const link = document.createElement('a')
        link.href = URL.createObjectURL(blob)
        link.download = 'Saifur Rahman (CV).pdf'
        document.body.appendChild(link)
        link.click()
        document.body.removeChild(link)
      })
      .catch((error) => console.error('Error downloading the file:', error))
  })
</script>
