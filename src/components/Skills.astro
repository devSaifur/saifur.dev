---
import NextIcon from '../icons/NextIcon.astro'
import HtmlIcon from '../icons/HtmlIcon.astro'
import CssIcon from '../icons/CssIcon.astro'
import JavascriptIcon from '../icons/JavascriptIcon.astro'
import TypescriptIcon from '../icons/TypescriptIcon.astro'
import ReactIcon from '../icons/ReactIcon.astro'
import NodeIcon from '../icons/NodeIcon.astro'
import MongodbIcon from '../icons/MongodbIcon.astro'
import MysqlIcon from '../icons/MysqlIcon.astro'
import PostgresqlIcon from '../icons/PostgresqlIcon.astro'
import TailwindIcon from '../icons/TailwindIcon.astro'
import ExpressIcon from '../icons/ExpressIcon.astro'
---

<section>
  <h2 class='pb-4 text-lg font-bold uppercase text-slate-100'>Skills</h2>
  <div
    class='col-span-4 grid grid-flow-col grid-rows-3 rounded-md bg-teal-400/10 py-4 sm:grid-rows-2'
  >
    <span class='flex flex-col items-center gap-y-1'>
      <HtmlIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >HTML
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <CssIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >CSS
      </span>
    </span>

    <span aria-hidden='true' class='flex flex-col items-center gap-y-1'>
      <JavascriptIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >Javascript
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <TailwindIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >Tawilwind
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <ReactIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >React
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <TypescriptIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >Typescript
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <NodeIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >Node.js
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <ExpressIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >Express
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <MongodbIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >MondoDB
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <NextIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >Next.js
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <MysqlIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >MySQL
      </span>
    </span>

    <span class='flex flex-col items-center gap-y-1'>
      <PostgresqlIcon />
      <span
        class='rounded-full px-3 py-1 text-xs font-medium leading-5 text-teal-300'
        >PostgreSQL
      </span>
    </span>
  </div>
</section>
