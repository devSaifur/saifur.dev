---
import { Icon } from 'astro-icon/components'
import Tooltip from '~/components/ui/Tooltip.astro'
---

<div class="grid gap-8">
  <ul
    class="flex items-center justify-center gap-x-5 lg:justify-start lg:gap-8"
    aria-label="social links section"
  >
    <a target="_blank" href="https://github.com/devSaifur">
      <label for="github-social-link" class="sr-only">Github social link</label>
      <Tooltip text="Github">
        <Icon
          name="github"
          class="tooltip size-6 cursor-pointer text-accent hover:text-accent/80 sm:size-8"
        />
      </Tooltip>
    </a>
    <a target="_blank" href="https://www.linkedin.com/in/dev-saifur">
      <label for="linkedin-social-link" class="sr-only"
        >Linkedin social link</label
      >
      <Tooltip text="Linkedin">
        <Icon
          name="linkedin"
          class="size-8 cursor-pointer text-accent hover:text-accent/80 sm:size-10"
          target="_blank"
        />
      </Tooltip>
    </a>
    <a target="_blank" href="https://x.com/devSaifur" class="group relative">
      <label for="x-social-link" class="sr-only"
        >X, formally Twitter social link</label
      >
      <Tooltip text="X">
        <Icon
          name="x"
          class="size-6 cursor-pointer text-accent hover:text-accent/80 sm:size-8"
        />
      </Tooltip>
    </a>
    <a href="mailto:saifur.dev@gmail.com?subject=Hello" class="group relative">
      <label for="mail-social-link" class="sr-only">Send email</label>
      <Tooltip text="Send email">
        <Icon
          name="mail"
          class="size-7 cursor-pointer text-accent hover:text-accent/80 sm:size-9"
        />
      </Tooltip>
    </a>
    <button
      id="cv"
      class="text-primary mb-2 inline-flex items-center justify-center whitespace-nowrap rounded-full bg-accent/70 px-4 py-2 text-xs font-bold text-black shadow hover:bg-accent/60 focus-visible:outline-none focus-visible:ring-1 sm:text-sm"
    >
      <Icon name="download" class="mr-1 size-4" />CV</button
    >
  </ul>
</div>

<script is:inline>
  document.getElementById('cv').addEventListener('click', () => {
    const url =
      'https://cdn.jsdelivr.net/gh/devSaifur/saifur.dev/public/assets/Saifur%20Rahman%20(CV).pdf'

    fetch(url)
      .then((res) => res.blob())
      .then((blob) => {
        const link = document.createElement('a')
        link.href = URL.createObjectURL(blob)
        document.body.appendChild(link)
        link.click()
        document.body.removeChild(link)
      })
  })
</script>
